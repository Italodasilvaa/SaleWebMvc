@model SalesWebMvc.Models.ModelViews.VendedorFormViewModel

@{ ViewData["Title"] = "Edit"; }

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Vendedor.Id" />
            <div class="form-group">
                <label asp-for="Vendedor.Nome" class="control-label"> Nome </label>
                <input asp-for="Vendedor.Nome" class="form-control" />
                <span asp-validation-for="Vendedor.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.Email" class="control-label"> Email </label>
                <input asp-for="Vendedor.Email" class="form-control" />
                <span asp-validation-for="Vendedor.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.BirthDate" class="control-label"> Data Nascimento </label>
                <input asp-for="Vendedor.BirthDate" class="form-control" />
                <span asp-validation-for="Vendedor.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.BaseSalario" class="control-label"> Base Salario </label>
                <input asp-for="Vendedor.BaseSalario" class="form-control" />
                <span asp-validation-for="Vendedor.BaseSalario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vendedor.DepartamentoId" class="control-label"></label>
                <select asp-for="Vendedor.DepartamentoId" asp-items="@(new SelectList(Model.Departamentos,"Id","Nome"))" class="form-control"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class=" btn btn-default" />
            </div>
        </form>


    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 